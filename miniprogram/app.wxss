/**app.wxss**/
page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height:100%;
} 
.footer {
  position:fixed;
  bottom:0;
  left:0;
  margin-bottom: 5rpx;
  background-color: white;
  width:100%;
  padding:0 1%;
  height: 112rpx;
  box-sizing: border-box;
  padding-top: 12rpx;
}
.flexStart,.flexBetween,.flexAround,.flexCenter,.flexEnd{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.flexBetween {
  justify-content: space-between;
}
.flexAround {
  justify-content: space-around;
}
.flexCenter {
  justify-content: center;
}
.flexEnd {
  justify-content: flex-end;
}
.footTab {
  width:100%;
  height:90rpx;
  position: fixed;
  left:0;
  bottom:0;
  box-shadow: 0 0 2rpx 2rpx #e7e7e7;
  background: #fff;
}
.strong {
  font-weight: 700;
  margin:0 5rpx;
}
.normal_title {
  width:100%;
  font-size:28rpx;
  color:#1e0e06;
}
.splite {
  width:100%;
  height:10rpx;
  background: #f5f5f5;
}
::-webkit-scrollbar {
  width: 0!important;
  height:0!important;
  color:transparent!important;
}
.m-r-10 {
  margin-right:10rpx;
}
.m-t-10 {
  margin-top:10rpx;
}
.m-t-20 {
  margin-top:20rpx;
}
.m-t-50 {
  margin-top:50rpx;
}
.m-20 {
  margin: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}
.m-l-20 {
  margin-left:20rpx;
}
.m-l-40 {
  margin-left:40rpx;
}
.f-40 {
  font-size:40rpx;
}
.color-gray {
  color:#666;
}
.color-orange {
  color:#fb8c3f!important;
}
.color-yellow {
  color:rgb(231, 231, 8);
}
.fonWei {
  font-weight:700;
}
.overEcli {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}


