
.restroom {
  width:100%;
  height:100%;
  background: #39454d;
}
.body {
  width:300rpx;
  height: 300rpx;
}
.circle{
  position: absolute;
  left: 38%;
  top: 20.6%;
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  background:#81929d;
  opacity: 1;
  border:1rpx solid #0681c2;
  text-align: center;
  line-height: 190rpx;
}
.circle image {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  z-index: 1000;
  left: 20%;
  top: 20%;
}
.circle1{
  position: absolute;
  left: 36.8%;
  top: 19.8%;
  transform: translate(-50% -50%);
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  background:#0681c2;
  opacity: 0.6;
  animation:myfirst1 2s infinite linear;
  border:1rpx solid #0681c2;
}
.circle2{
  position: absolute;
  left: 35.3%;
  top: 19%;
  transform: translate(-50% -50%);
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  background:#0681c2;
  opacity: 0.3;
  /* animation:myfirst2 2s infinite linear;  */
  animation-delay:2s; 
  border:1rpx solid #0681c2;
}
@keyframes myfirst1{
  0%   {opacity: 0.5; transform:scale(1) ;}
  50%   {opacity: 0.4;transform:scale( 1.2);}
  100%   {opacity: 0.3;transform:scale(1.4);}
}
@keyframes myfirst2{
  0%   {opacity: 0.2;transform:scale(1);}
  50%   {opacity: 0.1;transform:scale(1.2);}
  100%   {opacity: 0;transform:scale(1.4);}
}
.room {
  text-align: center;
  color:#dbdddc;
  font-size:30rpx;
}
.flexBetween {
  width:60%;
  margin:50rpx auto;
}
.flexBetween view {
  text-align: center;
  color:#dbdddc;
  font-size:28rpx;
}
.flexBetween image {
  width:150rpx;
  height: 150rpx;
  border-radius: 50%;

}