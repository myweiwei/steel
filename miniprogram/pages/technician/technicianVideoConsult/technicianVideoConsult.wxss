
.gradual {
  background: #1777ff;
  width: 100%;
  height: 280rpx;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}

.headRow {
  align-items: center;
  display: flex;
  flex-direction: row;
  color: black;
}
.cardImage {
  margin-top: 10rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.headImage {
  margin-top: 5rpt;
  margin-left: 7%;
  justify-content: center;
  flex-direction: column;
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.nameLay{
  flex-direction: column;
  display: flex;
  margin: 0 20rpx;
  position: relative;
}
.technicianCard {
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgba(71, 71, 71, 0.1);
