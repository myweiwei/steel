/* pages/technician/searchTechnician/searchTechnician.wxss */

.search {
  width: 100%;
  height: 124rpx;
  align-items: center;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(85, 85, 85, 0.10);
  /* margin-bottom: 20rpx; */
}
.loading{
  position:relative;
  top:40%;
  left:45%;
}
.intro {
  position: absolute;
  width: 100%;
  top: 144rpx;
  padding-bottom: 10rpx;
  bottom: 0;
}

.itemCard {
  /* align-items: center; */
  display: flex;
  flex-direction: row;
  padding: 24rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx;
  border-bottom-color: rgb(196, 195, 195);
  border-bottom-style: solid;
}

.cardImageView {
  width: 30%;
  padding: 0 10rpx;
}

.cardImage {
  margin-top: 10rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
}

.itemCardContent {
  flex-direction: column;
  padding: 0 30rpx;
  /* display: flex; */
  /* align-items: center;
  margin: 0 10rpx; */
  /* position: relative; */
}

.itemCardContent view {
  margin-top: 10rpx;
}

.name {
  color: black;
  font-size: 30rpx;
  /* font-weight: bold; */
}

.itemCardContentText {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  font-size: 24rpx;
  color: #3a3a3a;
}

.itemCardDeposit {
  color: #1777ff;
  display: flex;
  font-size: 24rpx;
  flex-direction: row;
}

.itemCardDepositT {
  margin-left: 20rpx;
}

.itemRowPrice {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}

.itemRowPrice view {
  max-height: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.v-i-l {
  margin-left: 30rpx;
}