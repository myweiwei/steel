.loading{
  position:relative;
  top:40%;
  left:45%;
}
.bg{
  background-color: #fafafa;
  height:100%;
}
.image{
  width: 200rpx;
  height: 130rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 15rpx;
}
.image image{
  width:100%;
  height:100%;
  border-radius: 10rpx;
}
.goodsItem{
  width: 95%;
  /* height: 250rpx; */
  background: #FFFFFF;
  border-radius: 9rpx;
  margin:0 auto;
  box-sizing: border-box;
}
.line{
  width: 96%;
  height: 2rpx;
  background-color: #f7f7f7;
  margin:20rpx auto;
}
.name {
  color:#1d1d1d; 
  margin-top:10rpx;
}
.desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin:10rpx 0;
  color:#474646;
}
.goodsImg{
  border: 1rpx solid #f5f5f5;
  border-radius: 5rpx;
}
.desc,.price {
  font-size: 25rpx;
}
van-button {
  margin:0 10rpx;
}
.footer {
  position:fixed;
  bottom:0;
  left:0;
  width:98%;
  padding:0 1%;
  box-sizing: border-box;
}
.van-button--large {
  height:80rpx!important;
  line-height: 80rpx!important;
}

