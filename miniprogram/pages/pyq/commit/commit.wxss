}

.imgList {
  position: relative;
  width: 300rpx;
}
.iconImg{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.imgList video {
  width: 100% !important;
  margin: 2%;
}
.van-cell-text{
  display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden;  
}
.delBtn {
  position: absolute;
  right: 3%;
  top: 3%;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 5px;
  line-height: 60rpx;
  text-align: center;
}

