/* pages/pyq/commit/commit.wxss */
.commit {
  width:100%;
  height:100%;
  background-color: #fff;
}
.imgList {
  position:relative;
  width:300rpx;
}
.imgList video {
  width:100%!important;
  margin:2%;
}
.delBtn {
  position:absolute;
  right:3%;
  top:3%;
  width:50rpx;
  height:50rpx;
  background-color: rgba(0,0,0,0.5);
  border-radius:5px;
  line-height: 60rpx;
  text-align: center;
}
.addressInfo {
  padding:10rpx 20rpx;
  border:1rpx solid #ccc;
  background-color: #eaeaec;
  width:50%;
  border-radius:50rpx;
  color:rgb(161, 156, 156);
  font-size:28rpx;
  margin-top:30rpx;
  margin-left:16rpx;
}
.addressInfo .address {
  width:100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: inline-block;
  word-break: break-all;
}
.active {
  color:#4939b1;
}
.videoLoa {
  width: 90px;
  height: 90px;
  margin-left:8px ;
  background-color: #eaeaec;
  border-radius: 8px;
  text-align: center;
  padding-top:30rpx;
  box-sizing: border-box;
  color:rgb(161, 156, 156);
}
.footer {
  position:fixed;
  bottom:0;
  left:0;
  width:98%;
  padding-left:1%;
  box-sizing: border-box;
}
