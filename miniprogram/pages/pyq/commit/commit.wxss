/* pages/pyq/commit/commit.wxss */
.commit {
  width:100%;
  height:100%;
  background-color: #fff;
}
.imgList {
  position:relative;
  width:300rpx;
}
.imgList video {
  width:100%!important;
  margin:2%;
}
.delBtn {
  position:absolute;
  right:3%;
  top:3%;
  width:50rpx;
  height:50rpx;
  background-color: rgba(0,0,0,0.5);
  border-radius:5px;
  line-height: 60rpx;
  text-align: center;
}
.addressInfo {
  padding:10rpx 20rpx;
  border:1rpx solid #ccc;
  background-color: #f7f8fa;
  width:40%;
  border-radius:50rpx;
  color:#ccc;
  font-size:28rpx;
  margin-top:30rpx;
  margin-left:16rpx;
}
.active {
  color:#6149f6;
}
.videoLoa {
  width: 90px;
  height: 90px;
  margin-left:8px ;
  background-color: #f7f8fa;
  border-radius: 8px;
  text-align: center;
  padding-top:30rpx;
  box-sizing: border-box;
  color:#ccc;
}
.footer {
  position:fixed;
  bottom:0;
  left:0;
  width:98%;
  padding-left:1%;
  box-sizing: border-box;
}
