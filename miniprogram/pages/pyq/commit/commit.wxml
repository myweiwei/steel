<!--pages/pyq/commit/commit.wxml-->
<view class='commit'>
  <van-cell-group >
    <van-field  custom-style='width:100%;height:30%;box-sizing:border-box' bindtap='btnClick'
      value="{{ message }}"
      label=""
      type="textarea"
      autosize
      placeholder="分享新鲜事"
      border="{{ false }}"
      focus='{{focus}}'
    />
  </van-cell-group>
  <van-uploader file-list="{{ fileList }}"  bind:delete='delImg' bind:after-read="afterRead" max-count="6" wx:if='{{count==0||!fileList1.length}}' accept='image' multiple='true'>
    <view class='videoLoa'>
      <van-icon name="photo-o"  size='50rpx' color='#ccc'/>
      <view>上传图片</view>
    </view>
  </van-uploader>
  <view wx:for='{{fileList1}}' wx:if='{{fileList1.length}}' wx:key='{{path}}' class='imgList'>
    <video  src="{{item.path}}" object-fit='cover' show-progress>
    </video>
    <view class='delBtn' >
      <van-icon name="cross" size='50rpx' color='#fff' bindtap='delVideo'/>
    </view>
  </view>
  <van-uploader bind:after-read="afterRead1" max-count="1" accept='video' multiple='false' wx:if='{{count==0||(!fileList.length&&!fileList1.length)}}'>
    <view class='videoLoa'>
      <van-icon name="video-o" size='50rpx' color='#ccc'/>
      <view>上传视频</view>
    </view>
  </van-uploader>
  <view class='addressInfo flexBetween'  bindtap='getLocation' >
    <view class='flexStart'>
      <van-icon wx:if='{{!address}}' name="location"size='30rpx' color='#aaa;'/>
      <van-icon wx:else name="location"size='30rpx' color='#6149f6;'/>
      <text wx:if='{{!address}}'>你在哪里？</text>
      <text wx:else class='active'>{{province}},{{city}}</text>
    </view>
    <view>
      <van-icon name="cross" wx:if='{{address}}'/>
    </view>
  </view>
  <view class='footer'>
    <van-button color="linear-gradient(to right, orange, #f7d501)" round size='large'>发送</van-button>
  </view>
</view>
