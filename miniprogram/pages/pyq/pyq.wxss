  display: flex;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  padding-left: 20rpx;
  /* color: rgb(255, 120, 120); */
}

.tc-cardBottom image {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  color: #ee4040;
}