/* pages/mine/regTeacher/regTeacher.wxss */
.regTeacher {
  height:100%;
}
.img {
  font-size:26rpx;
  color:rgb(129, 123, 123);
  margin-left:-20rpx;
}
.van-button--large {
  height:80rpx!important;
  line-height: 80rpx!important;
}
.fy .van-button--default,.fy .van-button--warning{
  width:100%;
}
.add {
  width:48.7%;
  height:300rpx;
  position: relative;
  margin:0.5%;
}
.add .close {
  position: absolute;
  right:0rpx;
  top:0rpx;
  height:50rpx;
  width:50rpx;
  border-radius: 15rpx;
  line-height: 50rpx;
  font-size:28rpx;
  color:#fff;
  background: rgba(0,0,0,0.5);
  text-align:center;
}
.add view{
  width:100%;
  height:100%;
}
.add .btn {
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  color:#666;
}
.add video,.add image {
  width:100%;
  height:100%;
  border-radius: 15rpx;
}
.yajin {
  padding:50rpx;
}
.yajin .yj_title {
  font-size: 50rpx;
}
.yajin .yj_info view{
  height:50rpx;
  line-height: 50rpx;
}
.smallBtn {
  width:49%;
  display: inline-block;
}
.smallBtn van-button,.smallBtn van-button button {
  width:100%;
}