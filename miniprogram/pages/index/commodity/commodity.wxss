.commodityList {
  width: 98%;
  display: flex;
  padding:0 1%;
  display: -webkit-flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
  /* align-items: center; */
  /* margin-bottom: 40rpx; */
  margin-top: 30rpx;
  margin-inline: auto;
}

.commodityItem {
  display: flex;
  flex-direction: column;
  width: 50%;
  text-align: center;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}

.commodityItem .card {
  margin: 0 8rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  height: 99%;
  /* width: 100%; */
  /* box-shadow: 3rpx 3rpx 10rpx rgba(37, 37, 37, 0.1); */
  border-radius: 10rpx;
  border-width: 0.5px;
  border-style: solid;
  background: white;
  border-color: rgba(236, 236, 236, 0.3);
}

.cardImg {
  width: 100%;
  height: 220rpx;
}

.contentText {
  /* 字间距 */
  letter-spacing:2rpx;
  text-align: left;
  font-size: 28rpx;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.row {
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  /* text-align: end; */
  align-items: baseline;
  /* color: rgb(147, 147, 147); */
}


.search {
  width: 100%;
  height: 124rpx;
  align-items: center;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(85, 85, 85, 0.10);
  /* margin-bottom: 20rpx; */
}