    /**index.wxss**/

.container {
  height: 100%;
}
.ban {
  width:100%;
  position: absolute;
  height:28%;
  top:0;
}
.van-search {
  padding:0px!important;
  margin:0 20rpx;
  border-radius: 40rpx;
}
.van-search__content {
  border-radius: 40rpx;
}
.swiper {
  width:100%;
  height:300rpx;
}
.swiper .swiper-item {
  height:100%
}
.swiper image{
  height:100%;
}
.imageContainer{
  width: 100%;
  height: 300rpx;
  background: #000;
}
.item{
  height:100%;
}
.itemImg{
  position: absolute;
  width: 100%;
  height:100%;
  border-radius: 15rpx;
  z-index: 5;
}
.adsec{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  background:#fff;
  border-radius:15rpx;
  padding: 7rpx 10rpx;
  height: 50rpx;
  box-shadow: 0 0 10rpx #ccc;
  box-sizing: border-box;
  color:#1d1d1d;
  font-size:26rpx;
}
.adsec .title {
  font-size:28rpx;
  font-family: 'Microsoft YaHei';
}
.adsec image {
  width:50rpx;
  height: 30rpx;
  padding:0 10rpx;
  border-right: 1px solid #e2e1e1;
  box-sizing: border-box;
}
.swiper_container {
  height: 55rpx;
  width: 80%;
  line-height: 55rpx;
  padding-left: 10rpx;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product {
  padding:30rpx;
  border-radius: 15rpx;
  background: #fff;
  box-sizing: border-box;

}
.product_list {
  width:90%;
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin:0 auto;
}
.product_list .list {
  width:49%;
  background: #f7f7f7;
  padding:20rpx 0 ;
  height:150rpx;
  margin-top:2%;
}
.teacher_list {
  width:100%;
  white-space:nowrap;
}
.teacher_list .list {
  width:350rpx;
  border:2rpx solid #d7d7d7;
  margin-right:15rpx;
  display: inline-block;
  border-radius: 3rpx;
}
.list-inner {
  display: flex;
  width:100%;
  height:100%;
  align-items: center;
  flex-direction: column;
  padding-top:30rpx;
  box-sizing: border-box;
  justify-content: center;
}
.list-inner .head {
  width:150rpx;
  height: 150rpx;
  border-radius: 50%;
  border:2rpx solid #d7d7d7;
}
.list-inner  text {
  height:40rpx;
  line-height: 40rpx;
  font-size:27rpx;
  width:80%;
  display: inline-block;
  text-align: center;
}
.list-inner .info {
  color:#1d1d1d;
  font-size:27rpx;
  width:100%;
  text-align: left;
  padding:0 10rpx;
  box-sizing: border-box;
  height:100rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  white-space: normal;
}
.list-inner .zw {
  color:#000;
  font-weight: 700;
  font-family: 'Microsoft YaHei';
  font-size:30rpx;
  margin:4rpx 0;
}
.list-inner .company {
  color:#1d1d1d;
  margin:4rpx 0;
  font-size: 28rpx;
}
.gt_btn {
  width:100%;
  font-size:23rpx; 
  border-top:2rpx solid #d7d7d7;
  padding:10rpx;
  box-sizing: border-box;
} 
.gt_btn .jq {
  width:120rpx;
  text-align: left;
}
.gt_btn .flexBetween {
  margin-top:5rpx;
}
.gt_btn .flexBetween .fonWei {
  margin:0 4rpx;
}
.gt_btn .image {
  width:125rpx;
  height:45rpx;
  position: relative;
}
.gt_btn image {
  width:100%;
  height:100%;
  position: absolute
}
.gt_btn .image view {
  position: absolute;
  top:13%;
  left:11%;
  transform: translate(-50% -50%);
  color:#fff;
}