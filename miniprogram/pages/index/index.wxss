/**index.wxss**/

.container {
  height: 100%;
}
.swiper {
  width:100%;
  height:20%;
}
.swiper .swiper-item,.swiper image{
  width:100%;
  height:100%;
}
.navbar {
  padding:40rpx 20rpx;
  border-bottom:1px solid #e2e1e1;
}
.navbar .box {
  width:45%;
  height:120rpx;
  line-height: 120rpx;
  box-shadow: 0 0 20rpx #e7e7e7;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navbar .box image{
  width:80rpx;
  height:80rpx;
  margin-right:10rpx;
}


.adsec{
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin: 0rpx auto;
  background:#fff;
  border-radius:6px;
  padding: 7rpx 10rpx;
  height: 50rpx;
}
.adsec .title {
  font-size:30rpx;
  padding:0 20rpx 0 0;
  border-right: 1px solid #e2e1e1;
  font-family: 'Microsoft YaHei';
  color:#f09f14;
  font-weight:700;
}
.swiper_container {
  height: 55rpx;
  width: 80%;
  line-height: 55rpx;
  padding-left: 10rpx;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  color:#000;
}
.product {
  padding-bottom:30rpx;
}
.product_list {
  width:90%;
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin:0 auto;
}
.product_list .list {
  width:49%;
  background: #f7f7f7;
  padding:20rpx 0 ;
  height:150rpx;
  margin-top:2%;
}
.teacher_list {
  width:90%;
  margin:0 auto;
  height:400rpx;
  white-space:nowrap;
}
.teacher_list .list {
  width:40%;
  height:300rpx;
  box-shadow: 0 0 5rpx 5rpx #e7e7e7;
  margin:15rpx;
  display: inline-block;
  border-radius: 5rpx;
}
.list-inner {
  display: flex;
  width:100%;
  height:100%;
  align-items: center;
  flex-direction: column;
  padding:10rpx;
  box-sizing: border-box;
  justify-content: center;
}
.list-inner image {
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.list-inner  text {
  height:50rpx;
  line-height: 50rpx;
  font-size:25rpx;
  width:80%;
  display: inline-block;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-inner .zw {
  color:#f09f14;
}
.gt_btn {
  width:80%;
  height:40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  border:1px solid #f09f14;
  text-align: center;
  font-size:25rpx; 
  color:#f09f14;
} 
